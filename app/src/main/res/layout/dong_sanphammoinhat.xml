<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/newsanpham"
                android:layout_gravity="top|right"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/imgSanphamnew"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:textColor="#120c0c"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Điện thoại mới"
                    android:id="@+id/txtTensanphammoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#f51010"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Giá sản phẩm mới"
                    android:id="@+id/txtGiasanphammoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>